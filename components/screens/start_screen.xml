<?xml version = "1.0" encoding = "utf-8" ?>
<component name = "start_screen" extends = "Group" >
  <script type="text/brightscript" uri="pkg:/components/screens/start_screen.brs" />
  <interface> 
   <field id="categories_button_pressed"
		    type="int"
		    alwaysnotify="true"
		    alias="categories_button.buttonSelected" />
    <field id="wishlist_button_pressed"
		    type="int"
		    alwaysnotify="true"
		    alias="wishlist_button.buttonSelected" />
  </interface>
  <children>
    <Label
      id="roku_title"
      text="roku"
      translation="[750, 200]"
      font="font:Outfit-Bold">
    <Font role="font" uri = "pkg:/fonts/Outfit-Bold.ttf" size="500"/>
    </Label>
    <Label
      id="sudoku_title"
      text="s u d o k u"
      translation="[600, 600]"
      font="font:Outfit-Light">
    <Font role="font" uri = "pkg:/fonts/Outfit-Light.ttf" size="100"/>
    </Label>
    <Button
      id="categories_button"
      text="Categories"
      translation="[500, 600]"
      iconUri=""
      focusedIconUri=""
      maxWidth="500"
      minWidth="100"
      height="150"/>
    <Button
      id="wishlist_button"
      text="Wishlist"
      translation="[1000, 600]"
      iconUri=""
      focusedIconUri="" 
      maxWidth="500"
      minWidth="100"
      height="150"/>
  </children>
</component>